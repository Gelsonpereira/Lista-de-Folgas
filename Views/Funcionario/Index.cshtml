@model IEnumerable<Projeto_Imperio.Models.EscalaFuncionario>;

    @{
        ViewData["Title"] = "Escala de Funcionarios";
    }

    <h2>Funcionarios</h2>

    <p>
        <a class="btn btn-primary" asp-action="Criar">Nova Escala</a>
    </p>

    <table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Nome)</th>
            <th>@Html.DisplayNameFor(model => model.Mes)</th>
            <th>@Html.DisplayNameFor(model => model.Data)</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Nome</td>
                <td>@item.Mes</td>
                <td>@item.Data.ToString("dd/MM/yyyy")</td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Editar" asp-route-id="@item.Id">Editar</a>
                    @* <a class="btn btn-info btn-sm" asp-action="Detalhes" asp-route-id="@item.Id">Detalhes</a> *@
                    <a class="btn btn-danger btn-sm" asp-action="Deletar" asp-route-id="@item.Id">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
