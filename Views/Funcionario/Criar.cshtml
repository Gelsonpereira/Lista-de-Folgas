@model Projeto_Imperio.Models.EscalaFuncionario

@{
    ViewData["Title"]="Criar nova Escala";
}

<h1>Criar nova Escala</h1>

<hr/>

<div class="row">   
    <div class="col-md-4">
        <form asp-action="Criar">
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
            </div>
               <div class="form-group">
                <label asp-for="Mes" class="control-label"></label>
                <input type="month" asp-for="Mes" class="form-control"/>
            </div>
                 <div class="form-group">
                <label asp-for="Data" class="control-label"></label>
                <input type="date" asp-for="Data" class="form-control"/>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br>
<div>
    <a asp-action="Index">Voltar</a>
</div>